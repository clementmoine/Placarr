enum Condition {
  NEW
  USED
  DAMAGED
}

model Shelf {
  id              String   @id @default(cuid()) 
  name            String
  imageUrl        String?
  color           String?

  // userId          String 
  // user            User    @relation(fields: [userId], references: [id])

  items           Item[]  

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Item {
  id              String   @id @default(cuid())
  name            String
  description     String?
  imageUrl        String?
  barcode         String?
  condition       Condition

  shelfId         String
  shelf           Shelf    @relation(fields: [shelfId], references: [id])

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
model BarcodeCache {
  id              Int      @id @default(autoincrement())
  barcode         String   @unique
  name            String
  provider        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}